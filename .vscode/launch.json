  "version": "0.2.0",
  "configurations": [
    {
      "name": "运行 server.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/server.py"
    },
    {
      "name": "运行 client.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/client.py"
    },

    {
      "name": "Python: Debug Test Sender",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_sender.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Debug Test Receiver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_receiver.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
